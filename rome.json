{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "ignore": ["node_modules", "src/**/__snapshots__"],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 160,
    "ignore": ["node_modules", "src/**/__snapshots__"]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "semicolons": "always",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single"
    }
  }
}
