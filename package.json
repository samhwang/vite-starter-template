{
  "name": "@samhwang/vite-react-starter-template",
  "version": "1.0.0",
  "description": "Vite + React + Netlify Starter Template",
  "msw": {
    "workerDirectory": "public"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "pnpm": "^8.0.0"
  },
  "packageManager": "pnpm@8.6.10",
  "scripts": {
    "postinstall": "msw init public",
    "dev": "vite",
    "netlify": "netlify dev",
    "prebuild": "rimraf dist",
    "build": "rimraf dist && vite build",
    "preview": "vite preview",
    "pretest": "rimraf coverage",
    "typecheck": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:CI": "pnpm run test && pnpm run typecheck",
    "test:preview": "vitest-preview",
    "lint": "rome check ./src/**/*.tsx",
    "lint:fix": "rome check --apply ./src/**/*.tsx",
    "lint:fix:unsafe": "rome check --apply-unsafe ./src/**/*.tsx",
    "format": "rome format --write ./src/**/*.tsx",
    "ci": "rome ci ./src/**/*.tsx"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.2",
    "react-router-dom": "^6.14.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.17.1",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "jsdom": "^22.1.0",
    "msw": "^1.2.3",
    "netlify-cli": "^15.9.1",
    "rimraf": "^5.0.1",
    "rome": "^12.1.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vitest": "^0.33.0",
    "vitest-preview": "^0.0.1"
  }
}
